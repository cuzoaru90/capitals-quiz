<!DOCTYPE html>
<html>
<head>
  <title>Quiz</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


      <% if flash[:notice] %>
       <div class="alert alert-success">
         <button type="button" class="close" data-dismiss="alert">&times;</button>
         <%= flash[:notice] %>
       </div>
     <% elsif flash[:alert] %>
       <div class="alert alert-warning">
         <button type="button" class="close" data-dismiss="alert">&times;</button>
         <%= flash[:alert] %>
       </div>
     <% end %>

      </ul>
    </div>

    <% if current_user && !submitted_quiz%>
      <p id="timer"></p>
    <% end %>

    <div id="header">World Quiz</div>
      
      <div id="haut">
      <ul class="menuhaut">
        <li><%= link_to "Home", welcome_index_path%></li>
        <li><%= link_to "Africa", states_africa_path%></li>
        <li><%= link_to "Asia", states_asia_path%></li>
        <li><%= link_to "Central America", states_central_america_path%></li>
        <li><%= link_to "Europe", states_europe_path%></li>
        <li><%= link_to "North America", states_north_america_path%></li>
        <li><%= link_to "Oceania", states_oceania_path%></li>
        <li><%= link_to "South America", states_south_america_path%></li>

        <% if current_user %>
           <li> <p style = "color: white;"> Welcome,  <%= current_user.name%> <%= link_to "Sign Out", session_path(current_user), method: :delete %> </p></li>

            <% if !submitted_quiz%>
              <li> <%= link_to "End quiz", states_answered_path%> </li>
            <% end %>

         <% else %>
           <li><%= link_to "Sign up", new_user_path%></li>
           <li><%= link_to "Sign In", new_session_path %> </li>
         <% end %>

      </ul>
      </div>


   <%= yield %>


</body>
</html>
